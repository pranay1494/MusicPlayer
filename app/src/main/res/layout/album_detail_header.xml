<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="@dimen/app_setting_row_h"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" >
    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/llShuffle"
        android:layout_height="@dimen/app_setting_row_h"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/app_setting_row_h"
            android:layout_height="@dimen/app_setting_row_h"
            android:padding="10dp"
            android:id="@+id/imgrandom"
            app:srcCompat="@drawable/guitar"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgrandom"
            android:layout_marginLeft="@dimen/d30"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/d3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdadadadasdada"
                android:textSize="@dimen/d16"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdadasadsasda"
                android:textSize="@dimen/d13"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>