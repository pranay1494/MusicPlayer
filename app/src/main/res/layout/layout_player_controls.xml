<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/rlplayerControls"
    android:layout_width="match_parent"
    android:layout_height="@dimen/grid_image_height"
    android:weightSum="10"
    android:layout_alignParentBottom="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<ImageView
    android:layout_width="0dp"
    android:layout_height="@dimen/d31"
    android:layout_weight="2"
    android:layout_gravity="center_vertical"
    app:srcCompat="@drawable/ic_repeat_black_24dp"/>
    <ImageView
    android:layout_width="0dp"
    android:layout_height="@dimen/d31"
    android:layout_weight="2"
    android:layout_gravity="center_vertical"
    app:srcCompat="@drawable/ic_skip_previous_black_24dp"/>
    <ImageView
    android:layout_width="0dp"
    android:layout_height="@dimen/app_setting_row_h"
    android:layout_weight="2"
    android:layout_gravity="center_vertical"
    app:srcCompat="@drawable/ic_play_circle_filled_black_24dp"/>
    <ImageView
    android:layout_width="0dp"
    android:layout_height="@dimen/d31"
    android:layout_weight="2"
    android:layout_gravity="center_vertical"
    app:srcCompat="@drawable/ic_skip_next_black_24dp"/>
    <ImageView
    android:layout_width="0dp"
    android:layout_height="@dimen/d31"
    android:layout_weight="2"
    android:layout_gravity="center_vertical"
    app:srcCompat="@drawable/ic_shuffle_black_24dp"/>
</LinearLayout>