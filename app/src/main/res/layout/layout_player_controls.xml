<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/player_control"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:thumb="@drawable/seekbarthumb_24dp"
        android:thumbOffset="8dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rlplayerControls"
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_control_height"
        android:layout_marginBottom="@dimen/d10"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/ivRepeat"
            android:layout_width="0dp"
            android:layout_height="@dimen/d31"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            app:srcCompat="@drawable/ic_repeat_black_24dp" />

        <ImageView
            android:id="@+id/ivPrevious"
            android:layout_width="0dp"
            android:layout_height="@dimen/d31"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            app:srcCompat="@drawable/ic_skip_previous_black_24dp" />

        <ImageView
            android:id="@+id/ivplayPause"
            android:layout_width="0dp"
            android:layout_height="@dimen/app_setting_row_h"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            app:srcCompat="@drawable/ic_play_circle_filled_black_24dp" />

        <ImageView
            android:id="@+id/ivNext"
            android:layout_width="0dp"
            android:layout_height="@dimen/d31"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            app:srcCompat="@drawable/ic_skip_next_black_24dp" />

        <ImageView
            android:id="@+id/ivShuffle"
            android:layout_width="0dp"
            android:layout_height="@dimen/d31"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            app:srcCompat="@drawable/ic_shuffle_black_24dp" />
    </LinearLayout>
</LinearLayout>