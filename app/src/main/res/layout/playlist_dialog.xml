<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        android:id="@+id/fragment_history_menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/llShuffle"
            android:layout_height="@dimen/app_setting_row_h"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/d4"
            android:gravity="center_horizontal|center_vertical">
            <ImageView
                android:layout_width="@dimen/app_setting_row_h"
                android:layout_height="@dimen/app_setting_row_h"
                android:padding="10dp"
                android:src="@drawable/exclamationmark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please Select"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/d20"/>
        </LinearLayout>        <LinearLayout
            android:id="@+id/llCreateNewPlaylist"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="&#9679;"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:text="Create new Playlist"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llAddToPlaylist"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="&#9679;"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:text="Add to existing Playlist"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/d10"
            android:layout_marginLeft="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/d20"
            android:layout_marginBottom="@dimen/d20"
            android:text="Cancel"
            android:textColor="@color/colorPrimaryDark"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>